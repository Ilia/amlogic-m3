	bool "Support M1 8626(mbx_aml8626-m_skt_v1) platform"
	help
	  Include support for the AMLOGIC M1 8626M Emulation Baseboard platform.

config MESON_CLOCK_TICK_RATE
    int "Clock Tick Rate"
	default 25000000

